        <PathIcon.RenderTransform>
          <CompositeTransform ScaleX="0.6"
                  ScaleY="0.6" />
        </PathIcon.RenderTransform>
      </PathIcon>
      <TextBlock x:Name="HelpTextBlock" Text=" " Height="50" Width="300" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF615757"/>
      <Image x:Name="MainImage" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform" PointerMoved="ImageGrid_PointerMoved" PointerWheelChanged="MainImage_PointerWheelChanged">
        <Image.RenderTransform>
          <TransformGroup>
            <ScaleTransform x:Name="ImageScaleTransform"/>
            <RotateTransform x:Name="ImageRotateTransform"/>
            <TranslateTransform x:Name="ImageTranslateTransform"/>
          </TransformGroup>
        </Image.RenderTransform>
        <!-- 修改此处的设置方式 -->
        <Image.RenderTransformOrigin>
          0.5,0.5
        </Image.RenderTransformOrigin>
      </Image>
    </Grid>
    <Grid Grid.Row="2" Background="{ThemeResource SystemControlAcrylicElementBrush}">

      <TextBlock x:Name="ZoomTextBlock" Text="缩放级别：100%" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="25"/>
    </Grid>
    <Grid Grid.Row="0" Background="{ThemeResource SystemControlAcrylicElementBrush}">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="128"/>
      </Grid.ColumnDefinitions>
      
      <CommandBar Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" >

        <CommandBar.PrimaryCommands>
          
          <AppBarButton Icon="GlobalNavigationButton" Width="48" />

          <AppBarButton Icon="OpenLocal" Width="48" Click="OpenButton_Click"/>

          <AppBarButton Icon="Edit" Width="48" />

          <AppBarButton Icon="Rotate" Width="48" Click="RotateButton_Click"/>

          <AppBarButton Icon="Delete" Width="48" Click="DelButton_Click"/>

          <AppBarButton Icon="Print" Width="48" />

          <AppBarButton Width="48" Height="60" Click="InfoButton_Click">
            <AppBarButton.Icon>
              <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE946;" FontSize="20"/>
            </AppBarButton.Icon>
          </AppBarButton>

          
          <AppBarButton Icon="ZoomIn" Width="48" Click="ZoomIn_Click"/>
          <AppBarButton Icon="ZoomOut" Width="48" Click="ZoomOut_Click"/>
          <AppBarButton Icon="FullScreen" Width="48" />

        </CommandBar.PrimaryCommands>
        
      </CommandBar>
      <CommandBar Grid.Column="1" Background="Transparent" OverflowButtonVisibility="Collapsed" HorizontalAlignment="Right">
        <AppBarButton Icon="Setting" Width="48" />
      </CommandBar>
    </Grid>
  </Grid>
 
</Page>
